{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OSProject",
            "type": "shell",
            "command": "gcc",
            "args": [
                "gui.c",
                "controller.c",
                "backend.c",
                "-o",
                "OSProject",
                "`pkg-config",
                "--cflags",
                "--libs",
                "gtk+-3.0`"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}